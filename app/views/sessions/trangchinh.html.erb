  <style>
    /* Phần Chuyển Ảnh*/
    .slideshow-container {
        position: relative;
        max-width: 60%;
        height: 200px;
        margin: auto;
        overflow: hidden;  
    }
    .slides {
        display: flex;
        width: 300%; 
        transition: transform 0.5s ease-in-out; 
    }
    .slide {
        width: 100%; 
        flex: 0 0 100%; 
        position: relative;
    }

    /* Image styles */
    .slideshow-container img {
        width: 35%;
        height: 30%;
        object-fit: cover;
    }

    /* Arrows */
    .prev, .next {
        cursor: pointer;
        position: absolute;
        top: 50%;
        padding: 10px;
        margin-top: -22px;
        color: white;
        font-weight: bold;
        font-size: 18px;
        transition: 0.6s ease;
        user-select: none;
    }
    .next {
        right: 0;
    }
    .prev {
        left: 0;
    }
    .prev:hover, .next:hover {
        background-color: rgba(0,0,0,0.8);
    }
    .dot-container {
        text-align: center;
        margin-top: 5px;
    }
    .dot {
        height: 10px;
        width: 10px;
        margin: 0 2px;
        background-color: #bbb;
        border-radius: 50%;
        display: inline-block;
        transition: background-color 0.6s ease;
    }

    .active, .dot:hover {
        background-color: #717171;
    }
    .container{
      display: flex;
      justify-content: space-between;
    }
    /* Phần Sản Phẩm*/
