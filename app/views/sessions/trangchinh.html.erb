      color: red;
    }
    .card a{
        display: block;
        text-align: center;
        border: 1px black solid;
        border-radius: 20px;
        padding: 10px;
        margin: 10px;
        text-decoration: none;
        color: rgb(24, 16, 16);
        transition: background-color 0.3s;
    }
    .card a:hover{
        background-color: #007BFF;
        color: white;
    }
    .them_sanpham{
