       display: flex;
       justify-content: space-between;
       flex-wrap: wrap;
       margin: 20px  auto;
       max-width: 1200px;
    }
    .card{
        background-color: white;
        border: 1px solid #ddd;
        border-radius: 8px;
        width: 15%;
        margin: 2%;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease-in-out;
    }
    .card:hover {
        transform: scale(1.2);
    }
    .card img {
        width: 100%;
        height: 180px;
        border-top-left-radius: 8px;
        border-top-right-radius: 8px;
        object-fit: cover;
    }
    .card h3{
        text-align: center;
        font-size: 15px;
        margin: 0;
    }
    .card p{
